<!-- START WORK -->
<section class="section text-center" id="portfolio">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="text-center">
                    <h2><span class="fw-bold">Çalışmalarım</span></h2>
                    <p class="text-muted mx-auto section-subtitle mt-3">Farklı alanmarda aptığım çalışmalar ve projeler.</p>
                </div>
            </div>
        </div>
        <div class="row mt-5 ">
            <ul class="col list-unstyled list-inline mb-0 text-uppercase work_menu" id="menu-filter">
                <li class="list-inline-item"><a class="active" data-filter="*">Tümü</a></li>
                @foreach (var item in Model.kategori)
                {
                    <li class="list-inline-item"><a class="" data-filter=".@item.KategoriAd.Replace(" ","")">@item.KategoriAd</a></li>
                }

            </ul>
        </div>
    </div>
    <div class="container">

        <div class="row mt-4 work-filter">
            @foreach (var item in Model.ViewCalismalar)
            {
                <div class="col-lg-4 work_item  @item.KATEGORI_AD.Replace(" ","")">
                    <a href="@item.GORSEL" class="img-zoom">
                        <div class="work_box">
                            <div class="work_img">
                                <img src="@item.GORSEL" class="img-fluid mx-auto d-block rounded" alt="work-img">
                            </div>
                            <div class="work_detail">
                                <p class="mb-2">@item.KATEGORI_AD</p>
                                <h4 class="mb-0">@item.CALISMA_ADI</h4>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<!-- END WORK -->
