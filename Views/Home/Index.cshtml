                            <div class="col-lg-12 text-end mt-2">
                                <input type="submit" id="submit" name="send" class="btn btn-custom text-uppercase" value="Send Massage">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
